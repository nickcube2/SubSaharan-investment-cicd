pipeline {
    agent any
    environment {
        IMAGE_NAME = 'archsol22/subsaharan-app'  // Optional: push to Docker Hub
        IMAGE_TAG = "${BUILD_NUMBER}"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def appImage = docker.build("archsol22/subsaharan-app:${BUILD_NUMBER}")
                    appImage.tag("latest")
                }
            }
        }
        stage('Push to Registry (Optional)') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker push ${IMAGE_NAME}:${IMAGE_TAG}'
                    sh 'docker push ${IMAGE_NAME}:latest'
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f k8s/deployment.yaml'
                sh 'kubectl rollout status deployment/subsaharan-app'
            }
        }
        stage('Ansible Post-Deployment (Optional)') {
            steps {
                ansiblePlaybook(
                    playbook: 'ansible/deploy.yml',  // Create simple playbook if needed
                    inventory: 'ansible/inventory.ini'
                )
            }
        }
        
    }
    post {
        always {
            sh 'docker system prune -f'  // Cleanup
        }
    }
}